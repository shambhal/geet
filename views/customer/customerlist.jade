extends widerlayout

block login
    
   div(ng-app="app" )
     div#holder( ng-controller='listController' ng-init='mode=list;' )
      div.pull-right
        button.btn.btn-primary(ng-click='addd()')
          i.fa.fa-plus
        |      
        a.btn.btn-danger(ng-click='deletee()' )
          i.fa.fa-trash 
      div(style='clear:right')
      div.panel.panel.default
        div.panel-heading  
          div.panel-title User  List
            div.panel-body() 
             div#cot
             
             
             
             
             
                form()
                 div.table-responsive(ng-show='records')
                       table#clist.table-bordered.table.table-over.table-striped
                            tr
                              td
                                   input(type='checkbox' ng-click='toggleAll()')
                            
                              td #{column_name}
                              td #{column_usergname}
                              td
                            tr(ng-repeat="record in records" id='tr{{record._id}}')  
                              td
                                   input(type='checkbox' name="reco" value="{{record._id}}"  )
                              td {{record.name}}
                              td {{record.email}}
                              td
                                 button.btn.btn-primary(href='customer/edit/{{record._id}}' ng-click="eedit(record._id)") 
                                       i.fa.fa-pencil
        
        
                include ../admin/chunks/paginate
               
        
                div#addchunk(ng-show='mode=="edit" || mode=="add"')
                 include addcustomer.jade
        

      script(src='/javascript/customer/user.js')
      script(src='/javascript/customer/userf.js')
      script(src='/javascript/customer/usercontrollers.js')
